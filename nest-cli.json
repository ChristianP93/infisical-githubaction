{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "./config/*.yml",
        "outDir": "./dist"
      },
      {
        "include": "../cert/**",
        "outDir": "./dist/cert"
      }
    ],
    "watchAssets": true
  }
}
